{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [],
    
    "baseUrl": "src",          // <-- πρόσθεσε αυτό
    "paths": {
       "@/components/*": ["components/*"]           // <-- πρόσθεσε αυτό
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
  "exclude": ["node_modules"]
}
